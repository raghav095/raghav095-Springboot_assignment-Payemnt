{
    "info": {
        "_postman_id": "e-commerce-backend-api",
        "name": "E-Commerce Backend API",
        "description": "Complete collection with automated scripts for Runner.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Products",
            "item": [
                {
                    "name": "Create Product",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.collectionVariables.set(\"productId\", jsonData.id);",
                                    "console.log(\"Product ID set to: \" + jsonData.id);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Gaming Laptop\",\n    \"description\": \"High Performance\",\n    \"price\": 75000.0,\n    \"stock\": 10\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8080/api/products",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8080",
                            "path": [
                                "api",
                                "products"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Products",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "http://localhost:8080/api/products",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8080",
                            "path": [
                                "api",
                                "products"
                            ]
                        }
                    }
                },
                {
                    "name": "Search Products (Bonus)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "http://localhost:8080/api/products/search?q=Laptop",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8080",
                            "path": [
                                "api",
                                "products",
                                "search"
                            ],
                            "query": [
                                {
                                    "key": "q",
                                    "value": "Laptop"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "2. Cart",
            "item": [
                {
                    "name": "Add to Cart",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"userId\": \"user123\",\n    \"productId\": \"{{productId}}\",\n    \"quantity\": 1\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8080/api/cart/add",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8080",
                            "path": [
                                "api",
                                "cart",
                                "add"
                            ]
                        }
                    }
                },
                {
                    "name": "Get User Cart",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "http://localhost:8080/api/cart/user123",
